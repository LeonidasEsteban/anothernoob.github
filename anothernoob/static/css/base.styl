@import "font-face.css"

*
	box-sizing border-box

a,
a:visited
	transition: all .3s ease-in-out

a:hover
	color #a6c

body
	background #000
	background-attachment fixed
	background-position center top
	background-size 100%
	background-repeat no-repeat
	font-family 'Open Sans', sans-serif !important
	font-size 16px
	margin 0

blockquote
	font-style italic

footer
	background-color #000
	height 150px
	width 100%

	a
		color #333 !important

h1,
h2,
h3,
h4,
h5
	font-family 'Open Sans', sans-serif !important

	&:first-letter
		text-transform capitalize

header
	background-size 100%
	background-repeat no-repeat
	background-attachment fixed
	color rgba(255,255,255,.9)
	height 500px
	width 100%

	&.single
		height 300px
	
	.header_box
		background rgba(0,0,0,.35)
		height 100%
		padding 200px 3em 1em 3em
		text-align center
		text-shadow 0 0 10px rgba(0,0,0,1)
		width 100%

		a
			color rgba(250,250,250,.9)
			display block
			padding 5em 1em
			
			&:hover
				color rgba(250,250,250,.9)
				text-decoration underline
				text-shadow 0 0 10px rgba(255,255,255,1)

		h1
			font-size 2em
			font-weight bold

		.author
			display block
			font-size .7em
			font-style italic

			&:hover
				color rgba(250,250,250,.9)
				text-decoration underline
				text-shadow 0 0 10px rgba(255,255,255,1)
		
input
	font-family 'Open Sans', sans-serif !important

nav
	background: linear-gradient(to bottom, rgba(0,0,0,.65) 0%, rgba(0,0,0,0) 100%)
	height 65px
	padding 0 1em
	position fixed
	text-align left
	top 0
	transition all .2s ease-in-out
	width 100%
	z-index 100000

	ul
		height 65px
		padding 0

		li
			color #fff
			cursor pointer
			display inline-block
			font-weight bold
			height 65px
			overflow hidden
			padding 1.5em 1em
			transition all .1s ease-in-out
			text-align center
			vertical-align top

			&:hover,
			&.open
				background #a6c
				color #fff
	
	&.float
		background #a6c
		height 42px

		ul
			height 42px

			li
				height 42px
				padding .7em 1em

				&:hover,
				&.open
					background #fff
					color #a6c

section
	background-color #fafafa
	background-color rgba(255,255,255,.95)
	box-shadow 0 0 20px #000
	padding 1em 0

p
	margin 0 0 20px

#content
	color #222
	margin 2em auto
	max-width 1024px
	overflow hidden

	&:first-letter
		text-transform capitalize

	#article_list
		display inline-block
		vertical-align top
		width 840px

	aside
		display inline-block
		padding 1em
		vertical-align top
		width 170px

	article

		.extra_data
			display block

		&.article_list
			border-top 1px dashed #aaa
			min-height 150px
			padding 1em 0 .5em 0

			&:first-child
				border-top none

			a
				display inline-block
				color #222
				text-align left
				width 100%

				&:hover
					text-decoration none

				&:hover h2
					color #a6c

				&:hover .summary
					color #222

			h2
				font-size 1.5em
				font-weight bold
				margin-bottom 1em
				margin-top .5em
				text-align left

			.extra_data
				color #666
				font-size .7em
				margin 1em 0

				&:first-letter
					text-transform uppercase

			.summary
				font-size 16px
				vertical-align top

			.thumb
				background-repeat no-repeat
				background-position top center
				background-size auto 100%
				float right
				height 128px
				margin 0 10px
				width 128px

		&.article_single

			h1
				font-size 3em
				font-weight bold

			img
				margin 1em 0
				width 100% !important

			.content
				
				a
					color #222
					font-weight bold
					text-decoration underline

				iframe
					
					&:not(.twitter-tweet)
						height 506px
						margin 1em 0
						width 100%

					&.twitter-tweet
						background #fff
						margin 1em auto !important
						width 80%

			.extra_data
				color #666
				font-size .8em
				margin 1em 0

				&:first-letter
					text-transform uppercase

			.share_buttons
				border-bottom 1px solid #a6c
				border-top 1px solid #a6c
				margin 1em 0
				outline 1px solid #fff
				padding 1em 0

				b
					display block
					margin-bottom 1em

				.button_share
					margin-right 1em
					min-width 80px
					vertical-align top

			.social_profile
				border-bottom 1px solid #a6c
				border-top 1px solid #a6c
				margin 2em 0
				padding 1em 0 .5em 0

				*
					vertical-align top

				b
					display block
					margin-bottom 1em

				.fb-like
					margin-left 1em

				.twitter-follow-button
					margin-left 1em
			.source
				margin 1em 0

				a
					color #222
					text-decoration underline

			.summary
				font-size 1.5em
				margin 5px 0

	.comment_form
		border-bottom 1px solid #eee
		border-top 1px solid #eee
		display table
		outline 1px solid #fff
		padding 1em 0 2em 0
		width 100%

		a
			color #222
			font-weight bold
			text-decoration underline

		input[type="submit"]
			background #93c
			background linear-gradient(bottom, #93c 5%, #7228a3 100%)
			border-color rgba(0,0,0,.2)
			border-style solid
			border-width 0 1px 1px 1px
			border-radius 0 0 5px 5px
			color #fff
			display table-cell
			font-size 1024px
			height 32px
			padding .3em 1em
			width 30%

		label
			display table-row

			&:first-letter
				text-transform uppercase

			textarea
				width 100%

		#id_comment
			border solid 1px rgba(0,0,0,.2)
			border-radius 5px 5px 0 0
			height 100px

		#id_honeypot
			display none

		.comment_textarea
			margin-bottom 0

		.bar
			display table-row
			text-align right

		.user
			display table-row
			height 40px

			.username
				display inline-block
				font-weight bold
				width 75%

			.extra_data
				color rgba(0,0,0,.3)
				display inline-block
				text-align right
				width 25%

	.comment_list

		.comment
			border-bottom 1px dashed rgba(0,0,0,.2)
			padding 1em 0
			position relative
			width 100%

			&:last-child
				border-bottom none

			.date
				color rgba(0,0,0,.4)
				position absolute
				right 0
				top 1em

	.suggestion_bottom
		background #333
		background-image url('data:image/png;base64,')
		color #fff
		padding 1em 1em 2em 1em
		text-align center
		width 100%

		span
			display block
			margin 1em 0

		a
			color rgba(255,255,255,.9)

			&:hover
				color rgba(250,250,250,.9)
				text-decoration none
				text-shadow 0 0 10px #fff

		.article_suggest
			background-size auto 100%
			background-repeat no-repeat
			background-position top center
			border 1px solid #000
			box-shadow 0 0 5px 0 #000
			display inline-block
			margin 10px auto
			vertical-align top
			width 30%

			h2
				font-weight bold
				font-size 1em

			.content
				background rgba(0,0,0,.4)
				height 200px
				padding 1em

#login-box
	background #fff
	color #a6c
	cursor default
	margin-top 20px
	padding 1em
	text-align justify
	width 250px

.float #login-box
	background #a6c
	color #fff
	margin-top 10px

#user-box
	text-transform capitalize

.ad
	padding 1em
	text-align center
	width 100%

	iframe

		embed
			border 1px dashed #777

.btn
	
	&:hover
		color #fff !important

.mobile-only
	display none

/*Large desktop*/
@media (min-width: 1200)

	.large-only
		display block

	.mobile-only
		display none

/*Desktop*/
@media (min-width: 980px) and (max-width: 1199px)

	header
		height 400px

		&.suggest
			height auto

			.header_box
				padding 80px 1em 1em 1em

		.header_box
			padding 150px 3em 1em 3em

			.article_suggest
				background-size auto 100%
				background-position center center
				display inline-block
				height auto
				margin 1em 2em
				width 250px

				.content
					height 230px

	#content
		padding 0 1em
		width 100%

		#article_list
			width 100%

	.mobile-only
		display none
/*Portrait Tablet to Landscape and Desktop*/
@media (min.width: 768px) and (max-width: 979px)
	
	body
		background-size auto 110%

	header
		height 400px

		.header_box
			padding 100px 3em 1em 3em

	#content
		padding 0 1em
		width 100%

		#article_list
			width 100%

	.mobile-only
		display none

/*Landstacpe Phone to Portrait Tablet*/
@media (max-width: 767px)

	body
		background-size auto 100%

	header
		height 250px

		&.single
			height 200px

		.header_box
			padding 1em

			a
				padding 1em

	nav
		height 42px
		overflow hidden
		padding 0
		position inherit

		ul

			a

				&:hover
					text-decoration none

			li
				background #a6c
				border 1px solid rgba(255,255,255,.1)
				display block
				height 42px
				padding .7em 1em
				width 100%

				&#mobile_menu:before
					background #fff
					box-shadow 0 0.35em 0 0 #fff,
						0 0.7em 0 0 #fff
					content ""
					cursor pointer
					height 0.2em
					left 1em
					top 1em
					position absolute
					width 1em

	#content
		padding 0 1em

		article
				
				&.article_list
					border-top 1px dashed #aaa
					min-height 100%
					padding 1em 0 .5em 0

				&.article_single
					
					h1
						font-size 2em

					iframe
						height 360px

		#article_list
			display block
			width 100%

		.suggestion_bottom
			
			.article_suggest
				display block
				background-size 100%
				width 100%

				.content
					height auto
		
	#login-button
		padding .7em 0

	#login-box
		margin-top 10px
		width 100%

	.mobile-only
		display block

	.screen-only
		display none

/*Landscape Phones and down*/
@media (max-width: 480px)

	body
		background-size auto 100%
		background-position top center
	
	header
		height auto

		&.single
			height 100px

		.header_box

			h1
				font-size 1.5em
				font-weight bold

	nav
		height 42px
		overflow hidden
		padding 0
		position inherit

		ul

			li
				background #a6c
				display block
				height 42px
				padding .7em 1em
				width 100%

	#content
		padding 0 1em

		article
			
			&.article_list
				border-top 1px dashed #aaa
				min-height 100%
				padding 1em 9 .5em 0

			&.article_single
				
				h1
					font-size 2em

				iframe
					height 360px

		.suggestion_bottom
			
			.article_suggest
				background-size auto 100%

		#article_list
			display block
			width 100%

	.mobile-only
		display none

	.not-mobile
		display none

	.screen-only
		display none